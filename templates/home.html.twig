<body>

<header class="headerAdmin_base">

    <section>
        <div class="header_admin">

            <div class="header_admin_logo">
                <a href="{{ path ('home') }}">
                    <img src="{{ asset('assets/icon/logoS4P_white.png') }}" alt="logo">
                </a>
            </div>

        </div>
    </section>

</header>

<main id="map_main">

    <div class="map_btn_add">
        <a href="{{ path('add') }}">Ajout d'un acteur</a>
    </div>
    <div class="map_title">
        <h1>Annuaire</h1>
    </div>
    <div class="container">
        <div class="list">
            <div class="item js-marker" {#{{ data.longitude }} {{ data.latitude }}#}>
                <form action="{{ path('home') }}" method="POST">
                    <input type="text" name="city">
                    <label for="">Ville</label>
                    <button type="submit" name="city-submit">valider</button>
                </form>

                {% if center is empty %}
                <div id="mapCenter" data-latitude='' data-longitude=''> </div>
                {% else %}
                    <div id="mapCenter" data-latitude='{{ center[0] }}' data-longitude='{{ center[1] }}'></div>
                {% endif %}


                <table>
                    {% set count = 0 %}
                    {% for category in result %}
                        <br>
                        <div style="color:#15A595;">
                            {{ category.name }}
                        </div>
                            {% for subCategory in category.subCategory %}
                                <div style="color:#ED721D;">
                                    {{ subCategory.name}}
                                </div>
                                    {% for actor in subCategory.actor  %}
                                        <div class='position{{ count }}' data-latitude='{{ actor.latitude }}' data-longitude='{{ actor.longitude }}'>
                                            {#{{ dump(actor) }}#}
                                            {{actor.name}}
                                        </div>
                                        {% set count = count+1 %}
                                    {% endfor %}
                            {% endfor %}
                    {% endfor %}

                    <div id="count" data-count='{{ count }}' ></div>
                   {# {{dump(result[0])}}#}
                </table>

            </div>

        </div>

        <div class="map" id="map">

        </div>
    </div>

</main>

